<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="holaivy.pri.shop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/apptitle"
        android:theme="@style/AppTheme" >
        <activity
            android:name="holaivy.pri.shop.StartActivity"
            android:label="@string/apptitle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="holaivy.pri.shop.DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="holaivy.pri.shop.ShoppingCartActivity"
            android:label="@string/title_activity_shopping_cart" >
        </activity>
        <activity
            android:name="holaivy.pri.shop.InfoActivity"
            android:label="@string/title_activity_info" >
        </activity>
    </application>

</manifest>
